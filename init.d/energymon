#!/bin/sh
#
# Start the energymon service.
#
### BEGIN INIT INFO
# Provides:          energymon
# Required-Start:    $local_fs $syslog
# Required-Stop:     $local_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: energymon
# Description:       energymon
### END INIT INFO

dir=/opt/energymon
name=energymon
exe1=$dir/energymon.sh
pid1=/var/run/energymon.pid
exe2=$dir/gas_counter.sh
pid2=/var/run/gas_counter.pid
exe3=$dir/current_counter.sh
pid3=/var/run/current_counter.pid
exe4=$dir/heating.sh
pid4=/var/run/heating.pid

. /lib/lsb/init-functions

case "$1" in
    start)
        log_begin_msg "Starting $name service"
        start-stop-daemon --start --quiet --pidfile $pid1 --exec $exe1
        start-stop-daemon --start --quiet --pidfile $pid2 --exec $exe2
        start-stop-daemon --start --quiet --pidfile $pid3 --exec $exe3
        start-stop-daemon --start --quiet --pidfile $pid4 --exec $exe4
        log_end_msg $?
        ;;
    stop)
        log_begin_msg "Stopping $name service"
        start-stop-daemon --stop --quiet --retry=TERM/30/KILL/5 --pidfile $pid1
        start-stop-daemon --stop --quiet --retry=TERM/30/KILL/5 --pidfile $pid2
        start-stop-daemon --stop --quiet --retry=TERM/30/KILL/5 --pidfile $pid3
        start-stop-daemon --stop --quiet --retry=TERM/30/KILL/5 --pidfile $pid4
        log_end_msg $?
        ;;
    *)
        echo "$0 {start|stop}"
        ;;
esac
